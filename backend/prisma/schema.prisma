generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  
}

model Navigation {
  id            Int       @id @default(autoincrement())
  title         String
  slug          String    @unique
  lastScrapedAt DateTime?

  categories    Category[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Category {
  id            Int        @id @default(autoincrement())
  navigationId  Int
  parentId      Int?
  title         String
  slug          String
  productCount  Int        @default(0)
  lastScrapedAt DateTime?

  navigation    Navigation @relation(fields: [navigationId], references: [id])
  parent        Category?  @relation("CategoryTree", fields: [parentId], references: [id])
  children      Category[] @relation("CategoryTree")

  products      Product[]

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([navigationId, slug])
}

model Product {
  id            Int            @id @default(autoincrement())
  sourceId      String         @unique
  title         String
  author        String?
  price         Float?
  currency      String?
  imageUrl      String?
  sourceUrl     String         @unique
  lastScrapedAt DateTime?

  categoryId    Int
  category      Category       @relation(fields: [categoryId], references: [id])

  detail        ProductDetail?

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([sourceId])
  @@index([lastScrapedAt])
}

model ProductDetail {
  id                   Int      @id @default(autoincrement())
  productId            Int      @unique

  description           String?

  // Additional information section (ISBN, publisher, binding, pages, notes, etc.)
  specs                 Json?

  // Editorial quotes like "Sunday Times", "Guardian", etc.
  editorialReviews      Json?

  // "You might also like" / related products shown on detail page
  recommendedProducts   Json?

  // Not present on World of Books, kept nullable by design
  ratingsAvg            Float?
  reviewsCount          Int      @default(0)

  product               Product  @relation(fields: [productId], references: [id])

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model ScrapeJob {
  id          Int      @id @default(autoincrement())
  targetUrl   String
  targetType  String   // navigation | category | product
  status      String   // pending | running | success | failed
  startedAt   DateTime @default(now())
  finishedAt  DateTime?
  errorLog    String?

  createdAt   DateTime @default(now())
}
